package unlam.paradigmas.diagnostico;

public class Ejercicio03 {

	public static int[][] resolver(int[][] m) {
		// completar

			int[][] matrizClonada = new int[m.length][];
			for (int i = 0; i < m.length; i++) {
			    matrizClonada[i] = m[i].clone();
			}
		
		for (int i = 0; i < m.length; i++)
			for (int j = 0; j < m[i].length; j++)
			{				
				if (i != m.length - 1)
					matrizClonada[i][j] += m[i+1][j];
				
				if (j != 0)
					matrizClonada[i][j] += m[i][j-1];
				
				if (i != 0)
					matrizClonada[i][j] += m[i-1][j];
				
				if (j != m[i].length - 1)
					matrizClonada[i][j] += m[i][j+1];
			}
		
		return matrizClonada;
	}
}
