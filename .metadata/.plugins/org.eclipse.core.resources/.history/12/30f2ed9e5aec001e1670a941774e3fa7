package unlam.paradigmas.diagnostico;

public class Ejercicio01 {

	public static boolean resolver(int[][] m) {
		// Escribir un método en Java que permita comprobar si la diagonal principal de una matriz cuadrada de enteros tiene 
		//en cada posición un valor igual a la suma de todos los valores de las posiciones anteriores de dicha diagonal.
		int sumador = 0;

		for (int i = 0; i < 3; i++)
		{
			if(i != 0 && sumador != m[i][i])
				return false;
			
			sumador += m[i][i];
		}
			
		return true;
		
	}
}
